<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="model.Author" table="author" schema="javaee">
        <id name="name">
            <column name="name" sql-type="varchar(30)" length="30"/>
        </id>
        <property name="tell">
            <column name="tell" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="mail">
            <column name="mail" sql-type="varchar(30)" length="30"/>
        </property>
    </class>
</hibernate-mapping>